<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Category</th>
      <th>Active</th>
      <th>Image</th>
      <th>Votes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %> <%=post.user.first_name%> <%= post.user.last_name%> == </td>
        <td><%= post.category.name %> == </td>
        <td><%= post.active %> == </td>
        <td><%= cl_image_tag post.image_id, :width => 50, :height => 50  %></td>
        <td><%= post.votes.count %> == </td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
