<script type="text/javascript">
function handle_notifications_click() {
    //document.write("Clicked");
    $.ajax("/users/clear_notifications/");
    return false;
}
</script>

<script type = "text/javascript" >
var link1 = document.getElementById("notifications_button");
if (typeof window.addEventListener != "undefined") {
    link1.addEventListener("click",handle_notifications_click,false);
} else {
    link1.attachEvent("onclick",handle_notifications_click);
}
</script>