<div class="row">
<div class="span12">
	<%= form_tag("/users/search", method: "get") do %>
  		<%= label_tag(:q, "Search for friends:") %>
  		<%= text_field_tag(:q, nil, {:style=>"margin:0"}) %>
  		<%= submit_tag("Search", {:class=>"btn btn-success"}) %>
	<% end %>
<table width="100%">
	<%@search_results.each_slice(2) do |slice|%>
		<tr>
			<% slice.each do |friend|%>
				<td>
					<%= avatar_image_big(friend)%>
					<strong>
					<%=link_to friend.first_name + " " + friend.last_name, :contoller => 'user', :action => 'show', :id => friend.id%>
					</strong>
					<br/><br/>
				</td>	
			<%end%>
		</tr>
	<%end%>
</table>
</div>
</div>
