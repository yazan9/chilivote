<div style="margin-left:0px;">
	<%if !@is_current_user && current_user.friends.include?(@user)%>
			<%if !@user.status.nil?%>
				<%if @user.status.status_type.nil? or @user.status/status_type == 1%>
				
				  <small><i><%= ("\"" + @user.status.title + "\"")%></i></small>
				  <%elsif @user.status.status_type == 2%>
				  
				  	<%=cl_image_tag @user.status.title, :width=> 500, :height => 300, :crop => :fill%><br>
				  <%end%>
			<%end%>
			<div id="status_vote_counts">
				<%=render partial: "/svotes/svotes_count_partial", :locals => {:user => @user}%>
			</div>
			
			<%if !@user.status.nil? and !@current_user.voted_for_status?(@user.status.id)%>
			<div id="status_vote_options" style="color:red">
				
				<small><%=link_to "vote up", "/svotes/vote_status_up"+"?id=" + @user.status.id.to_s, :remote => true%></small> 
				| 
				<small><%=link_to "vote down", "/svotes/vote_status_down"+"?id=" + @user.status.id.to_s, :remote => true%></small> 
			</div>
			<%end%>
	<%elsif @is_current_user%>
		<div id="status<%=@current_user.id.to_s%>"> 
			<%if !@current_user.status.nil?%>
				<%if @user.status.status_type.nil? or @user.status.status_type == 1%>
					<small><i><%= ("\"" + @current_user.status.title + "\"")%></i></small><br>
				<%elsif @user.status.status_type == 2%>
					<%=cl_image_tag @user.status.title, :width=> 500, :height => 300, :crop => :fill%><br>
				<%end%>
				<%=render partial: "/svotes/svotes_count_partial", :locals => {:user => @current_user}%>
			<%end%>
		</div>
		<br>
		<div id="status_image_div" class="status_image_div"></div><br>

		<%= form_tag("/users/create_status", :remote => true) do%>
		<div class="form_line">
		<a href="javascript: void(0);" id="upload_widget_opener" class="btn btn-info" style="color:white;">Upload image</a><br><br>
		Or..<br>

<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
          
<script type="text/javascript">  
  document.getElementById("upload_widget_opener").addEventListener("click", function() {

    cloudinary.openUploadWidget({ cloud_name: 'hgqr8qyb1', upload_preset: 'g4ksfnin'}, 
      function(error, result) { console.log(error, result) });
      
	$(document).on('cloudinarywidgetsuccess', function(e, data) {
		 $(".status_image_div").html(
       $.cloudinary.image(data[0].public_id, 
          { 
          format: data[0].format, version: data[0].version ,
          crop: 'fill', width: 500, height: 300}) );
          
           //alert(JSON.stringify(data, null, 4));
           //alert(data[0].public_id);
           $.ajax("/users/create_status?image_id="+data[0].public_id);
	});


  }, false);
</script>
<br>
        </div>
		<small><%= text_field_tag :status_title,nil, {:placeholder => "What's chillin ..", :style=>"width:95%;font-size:12px;margin-left:0px"}%></small>
		<%end%>
		
	<%end%>
</div>
