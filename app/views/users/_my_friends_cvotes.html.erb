$(document).ready(setTimeout(function(){
 $('.some_trigger').hover(function(e){
 var top = e.pageY+'px';
 var left = e.pageX+'px';   
 $.ajax($(this).data('url'));
 $('#voters_div').css({position:'absolute',top:top,left:left}).show();    
  }, function() {
    $("#voters_div").hide();
    $("#voters_div").html("Loading ...");
});
}),3000);

</script>

